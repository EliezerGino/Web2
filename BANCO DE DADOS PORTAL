CREATE DATABASE PORTAL

----------TABELA QUESTOES
CREATE TABLE QUESTOES(
CODIGO INT IDENTITY (1,1)NOT NULL ,
DESCRICAO VARCHAR (50) COLLATE SQL_Latin1_General_CP850_CI_AI NOT NULL,
MATERIA VARCHAR(50)NOT NULL,
PERGUNTA TEXT,
RESPOSTA TEXT
)
ALTER TABLE QUESTOES ADD CONSTRAINT PK_QUESTOES PRIMARY KEY CLUSTERED (CODIGO) ON [PRIMARY]
GO

--------TABELA ALUNOS
CREATE TABLE ALUNOS(
CODALUNOS INT IDENTITY (1,1)NOT NULL,
NOMEALUNO VARCHAR(50) NOT NULL,
PERIODO FLOAT,
CPF varchar (19) COLLATE SQL_Latin1_General_CP850_CI_AI NOT NULL,
IDALUNO VARCHAR(9) NOT NULL 
)
ALTER TABLE ALUNOS ADD CONSTRAINT PK_ALUNOS PRIMARY KEY CLUSTERED (CODALUNOS) ON [PRIMARY]
GO

--------TABELA DE ADMINISTRADORE DO PORTAL
CREATE TABLE ADM(
IDADM INT IDENTITY (1,1)NOT NULL,
NOME VARCHAR(50) NOT NULL,
FUNCAO VARCHAR(50) NULL
)
ALTER TABLE ADM ADD CONSTRAINT PK_ADM PRIMARY KEY CLUSTERED (IDADM) ON [PRIMARY]
GO

-------LOGINS
CREATE TABLE USUARIOS(
CODIGO INT IDENTITY (1,1)NOT NULL,
TIPO FLOAT NOT NULL DEFAULT (1),
USUARIO VARCHAR(50) NOT NULL,
SENHA VARCHAR(10) NOT NULL
)
ALTER TABLE USUARIOS ADD CONSTRAINT PK_USUARIOS PRIMARY KEY CLUSTERED (CODIGO) ON [PRIMARY]
